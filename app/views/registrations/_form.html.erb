<%= form_with(model: @registration, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @registration.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h4>

      <ul>
      <% @registration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :token, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :token, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :expired_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :expired_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :operator_confirmed, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :operator_confirmed, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vaild, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :vaild, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :customer_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email_send_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :email_send_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :create_by, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :create_by, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :updated_by, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :updated_by, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
